# ==================== API CONFIGURATION ====================
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Modelo OpenAI a usar (padrão: gpt-4o)
MODEL=gpt-4o

# Máximo de tokens por resposta (padrão: 4096)
MAX_TOKENS=4096

# ==================== AUTHENTICATION ====================
# Gerar novo secret: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
CHAINLIT_AUTH_SECRET=your-secret-here-generate-new-one

# Credenciais de login (ajuste conforme necessário)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=123

# ==================== DATABASE CONFIGURATION ====================
DB_PORT=1433
QUERY_LIMIT=100

# ==================== SYSTEM CONFIGURATION ====================
ENABLE_LOGGING=true
LOG_FILE=agent_logs.txt
AGENT_LANGUAGE=pt
INCLUDE_EMOJIS=true

# ==================== FINANCIAL THRESHOLDS ====================
ROI_EXCELLENT=12
ROI_GOOD=8
CAP_RATE_EXCELLENT=8
CAP_RATE_GOOD=5
RISK_HIGH=50
RISK_MEDIUM=25

# ==================== MSSQL CONFIGURATION ====================
MSSQL_SERVER=mssql
MSSQL_DATABASE=REB_BI_IA
MSSQL_USERNAME=sa
MSSQL_SA_PASSWORD=Str0ng!Passw0rd

# ==================== MSSQL DEFAULT CONNECTION ====================
# Configuração do banco MS SQL Server padrão para conexão rápida
# Edite estes valores para conectar automaticamente ao seu banco
MSSQL_DEFAULT_ENABLED=true
MSSQL_DEFAULT_SERVER=mssql
MSSQL_DEFAULT_PORT=1433
MSSQL_DEFAULT_DATABASE=REB_BI_IA
MSSQL_DEFAULT_USERNAME=sa
MSSQL_DEFAULT_PASSWORD=Str0ng!Passw0rd

# ==================== POSTGRESQL CONFIGURATION ====================
POSTGRES_HOST=db-persist
POSTGRES_PORT=5432
POSTGRES_DB=chainlit
POSTGRES_USER=chainlit
POSTGRES_PASSWORD=chainlit

# ==================== POSTGRESQL DEFAULT CONNECTION ====================
# Configuração do banco PostgreSQL padrão para conexão rápida
POSTGRES_DEFAULT_ENABLED=true
POSTGRES_DEFAULT_HOST=db-persist
POSTGRES_DEFAULT_PORT=5432
POSTGRES_DEFAULT_DATABASE=chainlit
POSTGRES_DEFAULT_USERNAME=chainlit
POSTGRES_DEFAULT_PASSWORD=chainlit

# ==================== DATABASE PERSISTENCE ====================
CHAINLIT_DATABASE_URL=postgresql://chainlit:chainlit@db-persist:5432/chainlit

# ==================== MCP CONFIGURATION ====================
# MCP servers configurados em .chainlit/config.toml
# - mssql: servidor MCP para MS SQL Server
# - postgres: servidor MCP para PostgreSQL
